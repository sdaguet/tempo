        </record>
        <record model="ir.ui.menu" id="darb_puthod.chantier_list">
            <field eval="[(4, ref('group_chef_chantier')),(4, ref('group_preparateur')),(4, ref('group_directeur')),(4, ref('group_compta')),(4, ref('group_administration'))]"
