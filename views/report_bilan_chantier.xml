<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_bilan_chantier_document">
            <div class="page">
                <style>
                    table.lines-table, .lines-table th , .lines-table td {
                    border: 1px solid gray;
                    border-collapse: collapse;
                    vertical-align: middle;}
                </style>
                <div class="oe_structure"/>

                <table class="lines-table" style="width:100%;">

                    <thead class="lines-table" style="width:100%;">
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </thead>
                    <tbody class="lines-table" style="width:100%;">
                        <tr>
                            <th align="center">PROPRIETE OVERSEAS CONSULTING</th>
                            <th colspan="2" align="center">
                                <div align="center">N° DE COMMANDE</div>
                                <div align="center">
                                    <span t-field="doc.order_id.name"/>
                                </div>
                            </th>
                            <th colspan="7" align="center">
                                <div align="center">TABLEAU DES COÛTS</div>
                                <div align="center">
                                    <span t-field="doc.order_id.partner_id.name"/>
                                    -
                                    <span t-field="doc.order_id.partner_id.city"/>
                                </div>
                            </th>
                            <th align="center">
                                <div align="center">N°Client</div>
                                <div align="center">
                                    <span t-field="doc.order_id.partner_id.name"/>
                                </div>
                            </th>
                            <th colspan="2" align="center">
                                <div align="center">Désignation de la commande</div>
                                <div align="center"><span t-field="doc.order_id.order_type"/>-
                                    <span t-field="doc.order_id.customer_order_delivery_date"
                                          t-field-options='{"format": "y"}'/>
                                </div>
                            </th>
                            <th align="center">
                                <div align="center">DATE COMMANDE</div>
                                <div align="center">
                                    <span t-field="doc.order_id.customer_order_delivery_date"
                                          t-field-options='{"format": "d/m/y"}'/>
                                </div>
                            </th>
                            <th align="center" colspan="3">
                                <img class="img img-responsive" align="center" style="width: 90%; height: 70%"
                                     src="/darb_puthod/static/images/Puthod_Logo.jpeg"/>
                            </th>
                        </tr>

                        <tr class="lines-table" style="width:100%;">
                            <th>TOTAUX COMMANDE</th>
                            <th>Coûts végétaux</th>
                            <th>PREPARATION/DEPLACEMENT</th>
                            <th>TONTE</th>
                            <th>TAILLE</th>
                            <th>PLANTATION</th>
                            <th>DESHERBAGE</th>
                            <th>PROTECTION</th>
                            <th>GAZON</th>
                            <th>ARROSAGE</th>
                            <th>DIVERS</th>
                            <th>Total des coût spécifiques + FOURNITURES</th>
                            <th>Total sous-traitance</th>
                            <th colspan="3">Totaux</th>
                        </tr>

                        <tr class="lines-table" style="width:100%;">
                            <td><strong>A)</strong> Prévisionnel prix de vente</td>
                            <td><span t-esc="get_sum_product(doc)[0]"/></td>
                            <td><span t-esc="get_sum_product(doc)[1]"/></td>
                            <td><span t-esc="get_sum_product(doc)[2]"/></td>
                            <td><span t-esc="get_sum_product(doc)[3]"/></td>
                            <td><span t-esc="get_sum_product(doc)[4]"/></td>
                            <td><span t-esc="get_sum_product(doc)[5]"/></td>
                            <td><span t-esc="get_sum_product(doc)[6]"/></td>
                            <td><span t-esc="get_sum_product(doc)[7]"/></td>
                            <td><span t-esc="get_sum_product(doc)[8]"/></td>
                            <td><span t-esc="get_sum_product(doc)[9]"/></td>
                            <td><span t-esc="get_sum_product(doc)[10]"/></td>
                            <td><span t-esc="get_sum_product(doc)[11]"/></td>
                            <td colspan="3"><span t-esc="get_sum_product(doc)[24]"/></td>
                        </tr>

                        <tr class="lines-table" style="width:100%;">
                            <td><strong>B)</strong> Réalisé prix de revient</td>
                            <td><span t-esc="get_sum_product(doc)[12]"/></td>
                            <td><span t-esc="get_sum_product(doc)[13]"/></td>
                            <td><span t-esc="get_sum_product(doc)[14]"/></td>
                            <td><span t-esc="get_sum_product(doc)[15]"/></td>
                            <td><span t-esc="get_sum_product(doc)[16]"/></td>
                            <td><span t-esc="get_sum_product(doc)[17]"/></td>
                            <td><span t-esc="get_sum_product(doc)[18]"/></td>
                            <td><span t-esc="get_sum_product(doc)[19]"/></td>
                            <td><span t-esc="get_sum_product(doc)[20]"/></td>
                            <td><span t-esc="get_sum_product(doc)[21]"/></td>
                            <td><span t-esc="get_sum_product(doc)[22]"/></td>
                            <td><span t-esc="get_sum_product(doc)[23]"/></td>
                            <td colspan="3"><span t-esc="get_sum_product(doc)[25]"/></td>
                        </tr>

                        <tr class="lines-table" style="width:100%;">
                            <td><strong>C)</strong> Ecart = A - B</td>
                            <td><span t-esc="get_sum_product(doc)[0] - get_sum_product(doc)[12]"/></td>
                            <td><span t-esc="get_sum_product(doc)[1] - get_sum_product(doc)[13]"/></td>
                            <td><span t-esc="get_sum_product(doc)[2] - get_sum_product(doc)[14]"/></td>
                            <td><span t-esc="get_sum_product(doc)[3] - get_sum_product(doc)[15]"/></td>
                            <td><span t-esc="get_sum_product(doc)[4] - get_sum_product(doc)[16]"/></td>
                            <td><span t-esc="get_sum_product(doc)[5] - get_sum_product(doc)[17]"/></td>
                            <td><span t-esc="get_sum_product(doc)[6] - get_sum_product(doc)[18]"/></td>
                            <td><span t-esc="get_sum_product(doc)[7] - get_sum_product(doc)[19]"/></td>
                            <td><span t-esc="get_sum_product(doc)[8] - get_sum_product(doc)[20]"/></td>
                            <td><span t-esc="get_sum_product(doc)[9] - get_sum_product(doc)[21]"/></td>
                            <td><span t-esc="get_sum_product(doc)[10] - get_sum_product(doc)[22]"/></td>
                            <td><span t-esc="get_sum_product(doc)[11] - get_sum_product(doc)[23]"/></td>
                            <td colspan="3"><span t-esc="get_sum_product(doc)[24] - get_sum_product(doc)[25]"/></td>
                        </tr>

                        <tr class="lines-table" style="width:100%;">
                            <th colspan="10">Végétaux</th>
                            <th></th>
                            <th colspan="5">Coût spécifiques + FOURNITURES</th>
                        </tr>
                        <tr class="lines-table" style="width:100%;">
                            <th>Date Fiche Chantier</th>
                            <th>Quantité</th>
                            <th colspan="5">Description</th>
                            <th>Prix Unitaires</th>
                            <th>Coût</th>
                            <th>Date du B.L</th>
                            <th>Quantité</th>
                            <th colspan="3">Description</th>
                            <th>Prix Unitaires</th>
                            <th>Coût</th>
                        </tr>

                        <t t-set="total" t-value="0"/>
                        <t t-set="totalb" t-value="0"/>
                        <t t-set="chantier" t-value="doc.name"/>
                        <t t-set="date" t-value="doc.order_id.customer_order_delivery_date"/>

                        <t t-foreach="doc.order_id.order_line" t-as="ol">

                            <t t-if="ol.product_id.categ_id.name=='Fournitures plantation' or ol.product_id.categ_id.name=='Vegeteaux'">

                                <tr>
                                    <t t-if="ol.product_id.categ_id.name=='Vegetaux'">
                                        <td>
                                            <span t-esc="chantier"/>
                                        </td>
                                        <td>
                                            <span t-field="ol.product_id.name"/>
                                        </td>
                                        <td colspan="5">
                                            <span t-field="ol.name"/>
                                        </td>
                                        <td>
                                            <span t-field="ol.price_unit"/>
                                        </td>
                                        <td>
                                            <span t-field="ol.purchase_price"/>
                                            <span t-set="total" t-value="total + ol.purchase_price"/>
                                        </td>
                                        <td>
                                            <span t-esc="date"/>
                                        </td>
                                        <td>
                                            <span t-field="ol.product_uom_qty"/>
                                        </td>
                                    </t>
                                    <t t-if="ol.product_id.categ_id.name!='Vegetaux'">
                                    <!--<t t-if="%(darb_puthod.ol.product_id.product_category_vigitaux)!='Vegetaux'">-->
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td colspan="5">
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td></td>
                                        <td>
                                        </td>
                                    </t>
                                    <t t-if="ol.product_id.categ_id.name=='Fournitures plantation'">
                                        <td colspan="3">
                                            <span t-field="ol.name"/>
                                        </td>
                                        <td>
                                            <span t-field="ol.price_unit"/>
                                        </td>
                                        <td>
                                            <span t-field="ol.purchase_price"/>
                                            <span t-set="totalb" t-value="totalb + ol.purchase_price"/>
                                        </td>
                                    </t>

                                    <t t-if="ol.product_id.categ_id.name!='Fournitures plantation'">
                                        <td colspan="3"></td>
                                        <td></td>
                                        <td>tt</td>
                                    </t>
                                </tr>

                            </t>
                        </t>
                        <tr>
                            <th colspan="6">TOTAL VEGETAUX</th>
                            <th colspan="3">
                                <div align="right">
                                    <span t-esc="total"/>
                                </div>
                            </th>
                            <th colspan="5">TOTAL COÛTS SPECIFIQUES</th>
                            <th colspan="2">
                                <div align="right">
                                    <span t-esc="totalb"/>
                                </div>
                            </th>
                        </tr>
                        <tr>
                            <th colspan="9">Main d'oeuvre</th>
                            <th></th>
                            <th colspan="6">Sous-Traitance</th>
                        </tr>
                        <tr>
                            <th colspan="2">Date</th>
                            <th>Preparation/Deplacement</th>
                            <th>TONTE</th>
                            <th>TAILLE</th>
                            <th>PLANTATION</th>
                            <th>DESHERBAGE</th>
                            <th>PROTECTION</th>
                            <th>GAZON</th>
                            <th>ARROSAGE</th>
                            <th>DIVERS</th>
                            <th>Date Du B.L</th>
                            <th>Fournisseur</th>
                            <th>Description</th>
                            <th>Prix Unitaie</th>
                            <th>Coût</th>
                        </tr>


                        <t t-set="tmp_p_d" t-value="0"/>
                        <t t-set="tmp_t" t-value="0"/>
                        <t t-set="tmp_ta" t-value="0"/>
                        <t t-set="tmp_pl" t-value="0"/>
                        <t t-set="tmp_dh" t-value="0"/>
                        <t t-set="tmp_pr" t-value="0"/>
                        <t t-set="tmp_g" t-value="0"/>
                        <t t-set="tmp_a" t-value="0"/>
                        <t t-set="tmp_divers" t-value="0"/>

                        <t t-foreach="doc.fiche_ids" t-as="f">
                            <tr>
                                <td colspan="2">
                                    (
                                    <span
                                            t-esc="time.strftime('%d/%m/%y',time.strptime(bilan_main_oeuvre(f)[0],'%Y-%m-%d'))"/>
                                    )
                                    <strong>
                                        <span t-esc="bilan_main_oeuvre(f)[1]"/>
                                    </strong>
                                </td>
                                <td>
                                    <span t-esc="bilan_main_oeuvre(f)[2][0]"/>
                                    <span t-esc="bilan_main_oeuvre(f)[4]"/>
                                </td>
                                <td>
                                    <span t-esc="bilan_main_oeuvre(f)[2][1]"/>
                                </td>
                                <td>
                                    <span t-esc="bilan_main_oeuvre(f)[2][2]"/>
                                </td>
                                <td>
                                    <span t-esc="bilan_main_oeuvre(f)[2][3]"/>
                                </td>
                                <td>
                                    <span t-esc="bilan_main_oeuvre(f)[2][4]"/>
                                </td>
                                <td>
                                    <span t-esc="bilan_main_oeuvre(f)[2][5]"/>
                                </td>
                                <td>
                                    <span t-esc="bilan_main_oeuvre(f)[2][6]"/>
                                </td>
                                <td>
                                    <span t-esc="bilan_main_oeuvre(f)[2][7]"/>
                                </td>
                                <td>
                                    <span t-esc="bilan_main_oeuvre(f)[2][8]"/>
                                </td>

                                <t t-set="tmp_p_d" t-value="tmp_p_d + bilan_main_oeuvre(f)[2][0]"/>
                                <t t-set="tmp_t" t-value="tmp_t + bilan_main_oeuvre(f)[2][1]"/>
                                <t t-set="tmp_ta" t-value="tmp_ta + bilan_main_oeuvre(f)[2][2]"/>
                                <t t-set="tmp_pl" t-value="tmp_pl + bilan_main_oeuvre(f)[2][3]"/>
                                <t t-set="tmp_dh" t-value="tmp_dh + bilan_main_oeuvre(f)[2][4]"/>
                                <t t-set="tmp_pr" t-value="tmp_pr + bilan_main_oeuvre(f)[2][5]"/>
                                <t t-set="tmp_g" t-value="tmp_g + bilan_main_oeuvre(f)[2][6]"/>
                                <t t-set="tmp_a" t-value="tmp_a + bilan_main_oeuvre(f)[2][7]"/>
                                <t t-set="tmp_divers" t-value="tmp_divers + bilan_main_oeuvre(f)[2][8]"/>

                                <td>Date Du B.L</td>
                                <td>Fournisseur</td>
                                <td>Description</td>
                                <td>Prix Unitaie</td>
                                <td>Coût</td>

                            </tr>
                        </t>
                        <tr>
                            <th colspan="2">TOT Hre PROD REAL</th>
                            <th>
                                <span t-esc="tmp_p_d"/>
                            </th>
                            <th>
                                <span t-esc="tmp_t"/>
                            </th>
                            <th>
                                <span t-esc="tmp_ta"/>
                            </th>
                            <th>
                                <span t-esc="tmp_pl"/>
                            </th>
                            <th>
                                <span t-esc="tmp_dh"/>
                            </th>
                            <th>
                                <span t-esc="tmp_pr"/>
                            </th>
                            <th>
                                <span t-esc="tmp_g"/>
                            </th>
                            <th>
                                <span t-esc="tmp_a"/>
                            </th>
                            <th>
                                <span t-esc="tmp_divers"/>
                            </th>
                            <th>Date Du B.L</th>
                            <th>Fournisseur</th>
                            <th>Description</th>
                            <th>Prix Unitaie</th>
                            <th>Coût</th>
                        </tr>
                        <t t-foreach="doc.fiche_ids" t-as="f">
                        <tr>
                            <th colspan="2">COÛT DIRECT REAL</th>
                            <th>
                                <t t-if="tmp_p_d != 0">
                                <span t-esc="bilan_main_oeuvre(f)[3][0]/tmp_p_d"/>
                                </t>
                            </th>
                            <th>
                                <t t-if="tmp_t != 0">
                                <span t-esc="bilan_main_oeuvre(f)[3][1]/tmp_t"/>
                                </t>
                            </th>
                            <th>
                                <t t-if="tmp_ta != 0">
                                <span t-esc="bilan_main_oeuvre(f)[3][2]/tmp_ta"/>
                                </t>
                            </th>
                            <th>
                                <t t-if="tmp_pl != 0">
                                <span t-esc="bilan_main_oeuvre(f)[3][3]/tmp_pl"/>
                                </t>
                            </th>
                            <th>
                                <t t-if="tmp_dh != 0">
                                <span t-esc="bilan_main_oeuvre(f)[3][4]/tmp_dh"/>
                                </t>
                            </th>
                            <th>
                                <t t-if="tmp_pr != 0">
                                <span t-esc="bilan_main_oeuvre(f)[3][5]/tmp_pr"/>
                                </t>
                            </th>
                            <th>
                                <t t-if="tmp_g != 0">
                                <span t-esc="bilan_main_oeuvre(f)[3][6]/tmp_g"/>
                                </t>
                            </th>
                            <th>
                                <t t-if="tmp_a != 0">
                                <span t-esc="bilan_main_oeuvre(f)[3][7]/tmp_a"/>
                                </t>
                            </th>
                            <th>
                                <t t-if="tmp_divers != 0">
                                <span t-esc="bilan_main_oeuvre(f)[3][8]/tmp_divers"/>
                                </t>
                            </th>
                            <th>Date Du B.L</th>
                            <th>Fournisseur</th>
                            <th>Description</th>
                            <th>Prix Unitaie</th>
                            <th>Coût</th>
                        </tr>
                        </t>
                        <t t-foreach="doc.fiche_ids" t-as="f">
                            <tr>

                                <th colspan="2">TOT. TRAV INTERNE REAL</th>

                                <th>
                                    <span t-esc="bilan_main_oeuvre(f)[3][0]"/>
                                </th>
                                <th>
                                    <span t-esc="bilan_main_oeuvre(f)[3][1]"/>
                                </th>
                                <th>
                                    <span t-esc="bilan_main_oeuvre(f)[3][2]"/>
                                </th>
                                <th>
                                    <span t-esc="bilan_main_oeuvre(f)[3][3]"/>
                                </th>
                                <th>
                                    <span t-esc="bilan_main_oeuvre(f)[3][4]"/>
                                </th>
                                <th>
                                    <span t-esc="bilan_main_oeuvre(f)[3][5]"/>
                                </th>
                                <th>
                                    <span t-esc="bilan_main_oeuvre(f)[3][6]"/>
                                </th>
                                <th>
                                    <span t-esc="bilan_main_oeuvre(f)[3][7]"/>
                                </th>
                                <th>
                                    <span t-esc="bilan_main_oeuvre(f)[3][8]"/>
                                </th>

                                <th>Date Du B.L</th>
                                <th>Fournisseur</th>
                                <th>Description</th>
                                <th>Prix Unitaie</th>
                                <th>Coût</th>
                            </tr>
                        </t>
                        <tr>
                            <th colspan="4">Montant devis accepté</th>
                            <th>
                                <span t-field="doc.order_id.amount_total" t-field-options="{&quot;widget&quot;: &quot;False&quot;}"/>
                            </th>
                            <th colspan="5"></th>
                            <th></th>
                            <th colspan="4"></th>
                            <th></th>
                        </tr>
                        <tr>
                            <th colspan="4">Totale heures effectuées</th>
                            <th>
                                <span t-esc="tmp_p_d + tmp_t + tmp_ta + tmp_pl + tmp_pl + tmp_dh + tmp_pr + tmp_g + tmp_a + tmp_divers"/>
                            </th>
                            <th colspan="5"></th>
                            <th></th>
                            <th colspan="4"></th>
                            <th></th>
                        </tr>
                    </tbody>
                </table>
                <table>

                </table>

            </div>
        </template>
        <template id="report_bilan_chantier">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="darb_puthod.report_bilan_chantier_document" t-lang="doc.order_id.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>


