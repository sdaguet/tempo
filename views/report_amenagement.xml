<!-- <?xml version="1.0" encoding="utf-8"?> -->
<openerp>
    <data>
	
		
		<template id="sale_report_quotation" inherit_id="sale.report_saleorder_document">
            
			
		
			<!-- <xpath expr="//div[@class='page']" position="before">
			   <t t-call="darb_puthod.report_quotation_header">
			</xpath> -->
			
			<xpath expr="//div[@class='row']" position="replace">
			    <div class="row">
                <div class="col-xs-6">
                    <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and shipping address:</strong>
					<strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Shipping address:</strong>
                        <div t-field="doc.partner_shipping_id" 
                            t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile", "fax"], "no_marker": true, "phone_icons": true}'/>
                        <p t-if="doc.partner_id.vat">VAT: <span t-field="doc.partner_id.vat"/></p>
                    
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <div t-if="doc.partner_shipping_id != doc.partner_invoice_id" class="mt8">
                        <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing address:</strong>
                    <div t-field="doc.partner_invoice_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile", "fax"], "no_marker": true, "phone_icons": true}'/>
                    <p t-if="doc.partner_id.vat">VAT: <span t-field="doc.partner_id.vat"/></p> 
                    </div>                   
                </div> 
                </div>
			</xpath>
			
			<xpath expr="//div[@id='informations']" position="replace">
			    
				
				<div t-if="doc.client_order_ref" class="col-xs-3">
                    <strong>Your Reference:</strong>
                    <p t-field="doc.client_order_ref"/>
					
                </div>
                <div t-if="doc.date_order" class="col-xs-3">
                    <strong t-if="doc.state not in ['draft','sent']">Date Ordered:</strong>
                    <strong t-if="doc.state in ['draft','sent']">Quotation Date:</strong>
                    <p t-field="doc.date_order"/>
                </div>
                <div t-if="doc.user_id.name" class="col-xs-3">
                    <strong>Salesperson:</strong>
                    <p t-field="doc.user_id"/>
                </div>
				<div t-if="doc.user_id.name" class="col-xs-3">
                    <strong>Delivery date :</strong>
                    <p t-field="doc.customer_order_delivery_date"/>
                </div>
				
                <div name="payment_term" t-if="doc.payment_term_id" class="col-xs-3">
                    <strong>Payment Term:</strong>
                    <p t-field="doc.payment_term_id"/>
                </div>
					
			</xpath>
			
			
			<xpath expr="//h2" position="replace">
			    <h2>
                    <span t-if="doc.state not in ['draft','sent']">Order Amenagement # </span>
                    <span t-if="doc.state in ['draft','sent']">Quotation Amenagement # </span>
                    <span t-field="doc.name"/>
                </h2>
			</xpath>		
			
			<xpath expr="//table[1][@class='table table-condensed']/thead/tr" position="replace">
                
                <tr>
				    <th width="2%">N°Lig</th>
                    <th width="25%">Désignation</th>
                    <th width="2%" class="text-right">Quantité</th>
                    <th class="text-right">Prix Brut HT</th>
                    <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line"></th>
                    <th class="text-right">TVA</th>
					<th class="text-right">Prix Net HT</th>
					<th class="text-right">Valeur Totale HT</th>
                </tr>				
            </xpath>		
			
		    <xpath expr="//t/t/tr/td[6]" position="before">
                <td style="text-align: center;">
                    
				    <span t-esc="l.price_unit - (l.price_unit * l.discount /100)"/> 
                									
                </td>	
            </xpath> 
			
			<xpath expr="//t/t/tr/td[4]" position="replace">
                <td t-if="display_discount" style="text-align: left;" groups="sale.group_discount_per_so_line">
                                <span t-esc="str(l.discount)+'%'"/>
                            </td>
            </xpath> 
			
			<xpath expr="//t/t/tr/td[2]/span" position="replace">
                <span t-field="l.product_uom_qty" t-esc="int(l.product_uom_qty)"/>          	
            </xpath>
			
			
			<xpath expr="//t/t" position="before">
                <t t-set="i" t-value="1"/>                      							                                 					              	
            </xpath>
			
			
			<xpath expr="//t/t/tr/td" position="before">
                <td>              
				<span t-esc="i"/> 
				<t t-set="i" t-value="i+1"/> 
                </td>	
            </xpath>
			
			<xpath expr="//t/t/tr/td[2]" position="replace">
                <td width="25%">
                    <span t-field="l.name"/>
                </td>
            </xpath> 
			
			<xpath expr="//t/t/tr/td[4]" position="replace">
			<td class="text-right" style="text-align: center;">
                <span t-field="l.price_unit"/>
            </td>
			</xpath>
			
			<xpath expr="//div[@name='total']" position="inside">
            
              <!-- TAXES -->
               
			      <!--<t t-set="taxes" t-value="{doc.order_line.tax_id.name : doc.order_line.tax_id.amount}"/> -->
				
              <div class="col-xs-4 pull-left">
                <!--       <t t-foreach="taxes" t-as="v">
                         *<t t-esc="v"/> : <t t-esc="int(v_value)"/></t> -->
					
					<table class="table table-condensed">
						
                        <tr class="border-black">
                            <th><strong>TVA</strong></th>
							<th><strong>Taux</strong></th>
							<th><strong>Total HT</strong></th>
							<th><strong>Total TVA</strong></th>
							<th><strong>Total TTC</strong></th>
                            
                        </tr>
					<!-- <t t-foreach="doc.order_line" t-as="l">	
						<tr>
						<td>
                        <span t-field="l.tax_id.name"/> 
						</td>
					</tr> 
					</t>
                     -->
						
						 <tr>
						 <td><span>2</span></td>
						 <td><span>20%</span></td>
						 <td>
                                <t t-set="test_variable" t-value="0"/>
                                <t t-foreach="doc.order_line" t-as="l">
								<t t-if="l.tax_id.name=='2'" > 
								
                                  <t t-set="test_variable" t-value="test_variable+l.price_subtotal"/> 
                                      </t> 
									  </t>
                                         <span t-esc="test_variable"/>
                         </td>
						 <td>
                                        <span t-esc="test_variable * 20 /100"/>
                         </td>
						 <td>
                                        <span t-esc="test_variable + test_variable * 20 /100"/>
                         </td>
						</tr>
						 <tr>
						 <td><span>4</span></td>
						 <td><span>10%</span></td>
						 <td>
                                <t t-set="test_variable" t-value="0"/>
                                <t t-foreach="doc.order_line" t-as="l">
								<t t-if="l.tax_id.name=='4'" > 
								
                                  <t t-set="test_variable" t-value="test_variable+l.price_subtotal"/> 
                                      </t> 
									  </t>
                                         <span t-esc="test_variable"/>
                         </td>
						 <td>
                                        <span t-esc="test_variable * 10 /100"/>
                         </td>
						 <td>
                                        <span t-esc="test_variable + test_variable * 10 /100"/>
                         </td>
						</tr>                                      
                    </table>
                
            </div>	
            </xpath>  
			
        </template>
		
		
		
