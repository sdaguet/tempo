<!-- <?xml version="1.0" encoding="utf-8"?> -->
<openerp>
    <data>
	
		
		<template id="sale_report_quotation" inherit_id="sale.report_saleorder_document">
            
			<xpath expr="//div[@class='col-xs-6']" position="replace">
			    <div class="col-xs-6">
                    <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and shipping address:</strong>
                    <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing address:</strong>
                    <div t-field="doc.partner_invoice_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile", "fax"], "no_marker": true, "phone_icons": true}'/>
                    <p t-if="doc.partner_id.vat">VAT: <span t-field="doc.partner_id.vat"/></p>
                    <div t-if="doc.partner_shipping_id != doc.partner_invoice_id" class="mt8">
                        <strong>Shipping address:</strong>
                        <div t-field="doc.partner_shipping_id" 
                            t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile", "fax"], "no_marker": true, "phone_icons": true}'/>
                        <p t-if="doc.partner_id.vat">VAT: <span t-field="doc.partner_id.vat"/></p>
                    </div>
				</div>	
			</xpath>
			
			
			<xpath expr="//h2" position="replace">
			    <h2>
                    <span t-if="doc.state not in ['draft','sent']">Order Amenagement # </span>
                    <span t-if="doc.state in ['draft','sent']">Quotation Amenagement # </span>
                    <span t-field="doc.name"/>
                </h2>
			</xpath>		
			
			<xpath expr="//table[1][@class='table table-condensed']/thead/tr/th[5]" position="before">
                <th class="text-right">
                   Prix unitaire
                </th>			  
            </xpath>
			
			 <xpath expr="//table[1][@class='table table-condensed']/thead/tr/th" position="replace">
                <th>Designation</th>		  
            </xpath>
			
			<xpath expr="//table[1][@class='table table-condensed']/thead/tr/th[3]" position="replace">
                <th class="text-right">Prix brut HT</th>		  
            </xpath>
            
			<xpath expr="//table[1][@class='table table-condensed']/thead/tr/th" position="before">
                <th>Num.ligne</th>		  
            </xpath>			
			
		    <xpath expr="//t/t/tr/td[5]" position="before">
                <td class="text-right" >
                    
				 <span t-esc="l.price_unit - (l.price_unit * l.discount /100)"/> 
                    
										
                </td>	
            </xpath> 
			
			<xpath expr="//t/t/tr/td[2]/span" position="replace">
                <span t-field="l.product_uom_qty" t-esc="'%.2f'%(l.product_uom_qty)"/>          	
            </xpath>
			
			
			<xpath expr="//t/t" position="before">
                <t t-set="i" t-value="1"/>                      							                                 					              	
            </xpath>
			
			
			<xpath expr="//t/t/tr/td" position="before">
                <td>              
				<span t-esc="i"/> 
				<t t-set="i" t-value="i+1"/> 
                </td>	
            </xpath>
			
			<xpath expr="//div[@name='total']" position="inside">
                
                <div class="col-xs-4 pull-left">
                    
					<table class="table table-condensed">
                        <tr class="border-black">
                            <th><strong>TVA</strong></th>
							<th><strong>Taux</strong></th>
							<th><strong>Total HT</strong></th>
							<th><strong>Total TVA</strong></th>
							<th><strong>Total TTC</strong></th>
                            
                        </tr>
					<!-- <t t-foreach="doc.order_line" t-as="l">	
						<tr>
						<td>
                        <span t-field="l.tax_id.name"/> 
						</td>
					</tr> 
					</t>
                     -->
				
						 <tr>
						 <td><span>2</span></td>
						 <td><span>20%</span></td>
						 <td>
                                <t t-set="test_variable" t-value="0"/>
                                <t t-foreach="doc.order_line" t-as="l">
								<t t-if="l.tax_id.name=='2'" > 
								
                                  <t t-set="test_variable" t-value="test_variable+l.price_subtotal"/> 
                                      </t> 
									  </t>
                                         <span t-esc="test_variable"/>
                         </td>
						 <td>
                                        <span t-esc="test_variable * 20 /100"/>
                         </td>
						 <td>
                                        <span t-esc="test_variable + test_variable * 20 /100"/>
                         </td>
						</tr>
						 <tr>
						 <td><span>4</span></td>
						 <td><span>10%</span></td>
						 <td>
                                <t t-set="test_variable" t-value="0"/>
                                <t t-foreach="doc.order_line" t-as="l">
								<t t-if="l.tax_id.name=='4'" > 
								
                                  <t t-set="test_variable" t-value="test_variable+l.price_subtotal"/> 
                                      </t> 
									  </t>
                                         <span t-esc="test_variable"/>
                         </td>
						 <td>
                                        <span t-esc="test_variable * 10 /100"/>
                         </td>
						 <td>
                                        <span t-esc="test_variable + test_variable * 10 /100"/>
                         </td>
						</tr>                                      
                    </table>
                
            </div>	
            </xpath>  
			
        </template>
		<template  id="colspane_modif" inherit_id="sale_layout.subtotal_template">
    
            <xpath expr="//tr[@class='text-right']/td" position="attributes">
		        <attribute name="colspan">8</attribute>
		    </xpath>  
		
        </template>
		<template  id="largeur_modif" inherit_id="sale_layout.category_template">
    
            <xpath expr="//tr[@class='active']/td" position="attributes">
		        <attribute name="colspan">8</attribute>
		    </xpath>  
		
        </template>
		<template  id="brackets_modif" inherit_id="sale_layout.separator_template">
    
            <xpath expr="//tr[@class='text-center']/td" position="attributes">
		        <attribute name="colspan">8</attribute>
		    </xpath>  
		
        </template>
		
		<template id="report_amenagement">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="darb_puthod.sale_report_quotation" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
	</data> 
</openerp>
