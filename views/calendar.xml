<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="form_calendar_puthod_inh" model="ir.ui.view">
            <field name="name">form.calendar.puthod.inh</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_ids']" position="after">
                    <field name="user_ids"/>
                </xpath>
                <!--<xpath expr="//field[@name='partner_ids']" position="attributes">
                    <attribute name="domain">[(user_ids.ids,'=',1)]</attribute>
                </xpath>-->

            </field>
        </record>

        <record id="tree_calendar_puthod_inh" model="ir.ui.view">
            <field name="name">tree.calendar.puthod.inh</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_ids']" position="after">
                    <field name="user_ids"/>
                </xpath>
            </field>
        </record>

        <record id="calendar_puthod_inh" model="ir.ui.view">
            <field name="name">calendar.puthod.inh</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_calendar"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_ids']" position="after">
                    <field name="user_ids"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>