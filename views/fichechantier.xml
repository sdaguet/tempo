<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Declared the same in every module that may need it -->
    <record id="fiche_chantier" model="ir.ui.view">
        <field name="name">Fiche de Chantier</field>
        <field name="model">fiche.chantier</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <data>
              <xpath expr="//button[@name='button_confirm']" position="after">
                  <button name="button_remplir" attrs="{'invisible': [('status_interv','!=', 'brouillon')]}" string="Valider Fiche Chantier" class="oe_highlight"/>
              </xpath>
              <xpath expr="//field[@name='state']" position="before">
                  <field name="status_interv" widget="statusbar" statusbar_visible="brouillon,rempli,valide,comptabilise" statusbar_colors="{&quot;brouillon&quot;:&quot;red&quot;,&quot;rempli&quot;:&quot;blue&quot;}"/>
              </xpath>
              <xpath expr="//page[last()]" position="after">
                  <page name="fiche_chantier_infos"
                        string="Infos Chantier">
                      <group name="fiche_chantier_infos_group">
                        <group string="Adresse du Chantier">
                          <field name="inter_date"/>
                          <field name="status_interv"/>
                          <field name="equipe_id"/>
                        </group>
                      </group>
                  </page>
              </xpath>
          </data>
        </field>
    </record>

    

  </data>
</odoo>
