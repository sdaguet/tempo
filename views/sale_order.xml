<openerp>
    <data>
        <record model="ir.ui.view" id="view_order_form_inherit_puthod">
            <field name="name">sale.order.form</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <header position="inside">
                    <button name="create_fiche_chantier" string="Créer un chantier" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'sale')]}"/>
                </header>
            </field>
        </record>
        
        <record model="ir.ui.view" id="product_form_view_sale_order_tasks">
            <field name="name">product.product.tasks</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                	<page string="Tâches">
                        <field name="task_ids">
                            <tree editable="bottom">
			                	<field name="name"/>
			                	<field name="description"/>
                            </tree>
                        </field>
                	</page>
                </notebook>
            </field>
        </record>
	</data>
</openerp>