<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_liasse_preparation_document">
            <t t-call="report.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
                <div class="page">
	            <div class="oe_structure"/>
	                <div class="row" style="font-size: 11">
	                    <div class="col-xs-6">
	                        <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Adresse de Facturation et livraison:
	                        </strong>
	                        <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Adresse de livraison:</strong>
	                        <div t-field="doc.partner_shipping_id"
	                             t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile", "fax", "website"], "no_marker": true, "phone_icons": true}'/>
	                    </div>
	                    <div class="col-xs-5 col-xs-offset-1">
	                        <div t-if="doc.partner_shipping_id != doc.partner_invoice_id" class="mt8">
	                            <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Adresse de Facturation:</strong>
	                            <div t-field="doc.partner_invoice_id"
	                                 t-field-options='{"widget": "contact", "fields": ["address", "name", "website"], "no_marker": true, "phone_icons": true}'/>
	                        </div>
	                    </div>
	                </div>
                	<table style="border-top:thin solid #323232;page-break-after:always;" class="table table-condensed">
		                <thead>
			                <tr style="background-color:#D8D8D8;">
			                    <th width="2%" class="text-right" style="border:thin solid #323232;font-size: 11">Emplacement</th>
			                    <th width="40%" style="border:thin solid #323232;font-size: 11">DÃ©signation</th>
			                    <th class="text-center" style="border:thin solid #323232;font-size: 11">QTY</th>
			                    <th class="text-center" style="border:thin solid #323232;font-size: 11">Nbre Etiq</th>
			                </tr>
		               </thead>
		               <tbody class="sale_tbody">
                            <t t-foreach="doc.lines" t-as="l">
                                <tr align="center">
                                    <td align="center">
                                    	<span t-field="l.emplacement_id"/>
                                    </td>
                                    <td align="center">
                                    	<span t-field="l.product_id"/>
                                    </td>
                                    <td align="center">
                                    	<span t-field="l.qty"/>
                                    </td>
                                    <td align="center">
                                    	<span t-field="l.nbr_etiq"/>
                                    </td>
                                </tr>
                            </t>
		               </tbody>
	               </table>
                	
                </div>
            </t>
        </template>

        <template id="report_liasse_preparation">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="darb_puthod.report_liasse_preparation_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</openerp>
